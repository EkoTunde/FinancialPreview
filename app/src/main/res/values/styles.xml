<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Button.Operator" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/work_sans_light</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="Button.Numpad.Num" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/work_sans_light</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="Button.MoreVert" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/work_sans_light</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="Widget.ScheduledDialog.Toolbar" parent="Widget.AppCompat.Toolbar">
        <!--<item name="android:background">@color/colorPrimary</item>-->
        <item name="android:theme">@style/Theme.AppCompat.DayNight.DarkActionBar</item>
        <!--<item name="android:theme">@style/Theme.FinancialPreviewDesign</item>-->
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/TextAppearance.ScheduledDialog.Toolbar</item>
    </style>

    <style name="TextAppearance.ScheduledDialog.Toolbar" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="titleTextColor">@color/colorWhite</item>
    </style>

    <style name="TextAppearance.FormDialog.TextInputLayout.Hint" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/quicksand_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="EditTextAlikeMaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/EditTextAlikeMaterialButtonThemeOverlay</item>
        <item name="android:fontFamily">@font/quicksand_regular</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:text">@string/text</item>
        <item name="android:textColor">?attr/colorControlNormal</item>
    </style>

    <style name="EditTextAlikeMaterialButtonThemeOverlay">
        <item name="colorPrimary">@color/editTextBackground</item>
        <item name="colorOnSurface">@color/colorWhite</item>
    </style>

    <style name="FloatingActionButton" >
        <item name="colorAccent">@color/colorWhite</item>
        <item name="colorSecondary">@color/colorWhite</item>
    </style>

</resources>